
@model Entertainers

@*confirmation for deletion*@
<center>
    <form method="post" asp-action="DeleteRecord">
        <h4 class="display-4 text-center">Are you sure you want to delete this record? Please note that this action cannot be undone.</h4>
        <a asp-action="DataList" class="btn btn-primary">I changed my mind</a>
        <button asp-action="DeleteRecord" class="btn btn-danger" type="submit">Yes, I'm sure</button>
        <input type="hidden" asp-for="@Model.EntertainerId" />
    </form>
</center>
